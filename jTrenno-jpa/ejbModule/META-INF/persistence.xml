<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="sampleProject-jpa">
	<provider>org.hibernate.ejb.HibernatePersistence</provider>  
        <jta-data-source>java:jboss/datasources/projectdb</jta-data-source>
    
	<properties>
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"></property>
			<property name="hibernate.connection.url" value="dbc:mysql://localhost:3306/jee_5irc"></property>
        <property name="hibernate.connection.username" value="jee_5irc"></property>
        <property name="hibernate.connection.password" value="jee_5irc"></property>
		</properties>
	</persistence-unit>
</persistence>
